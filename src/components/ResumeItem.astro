---
import { HashIcon, ExternalLinkIcon } from "astro-feather";

interface Props {
  duration: string;
  heading?: string;
  desc?: string;
  descAfter?: string;
  link?: string;
}

const { duration, heading, desc, descAfter, link } = Astro.props;
---

<section class:list={["print:pt-0", heading ? "pt-3" : ""]}>
  <div class="flex flex-col justify-between sm:flex-row sm:gap-3">
    <div>
      {
        heading && (
          <h3 class="m-0 flex flex-row flex-nowrap items-center gap-0.5">
            <HashIcon size={18} customClasses="text-green-600" />
            {heading}
            {link && (
              <a
                class="-ms-1 border-8 border-transparent text-sm not-print:mt-[1px] hover:text-green-600 print:text-xs"
                title={`Open the ${heading} project in a new tab`}
                href={link}
                target="_blank"
              >
                <ExternalLinkIcon
                  size={14}
                  customClasses="text-current transition:colors"
                />
              </a>
            )}
          </h3>
        )
      }
      {
        desc && (
          <p class="m-0 font-semibold">
            {desc}
            {descAfter && (
              <span class="font-normal">&nbsp;|&nbsp;{descAfter}</span>
            )}
          </p>
        )
      }
    </div>
    <p class="mt-1 mb-0 text-sm tracking-wide italic print:text-xs">
      {duration}
    </p>
  </div>
  <div>
    <slot />
  </div>
</section>
