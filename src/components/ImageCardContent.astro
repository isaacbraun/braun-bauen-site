---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
  title: string;
  subtitle: string;
}

const { src, alt, title, subtitle } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  width={1200}
  height={900}
  quality={100}
  class="object-cover"
  layout="constrained"
/>
<div class="px-4 pt-3 pb-5">
  <h3 class="flex gap-1 text-lg font-semibold text-balance text-green-700">
    {title}
  </h3>
  <p class="text-gray-600">{subtitle}</p>
</div>
