---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const title = "404 Not Found";
const description = "The page you requested cannot be found.";
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main
      class="prose mx-auto mt-16 min-h-dvh max-w-(--breakpoint-xl) selection:bg-green-200 md:mt-32 print:mt-2"
    >
      <section class="mx-auto text-center">
        <h1>{title}</h1>
        <p>{description}</p>
        <p>
          <a href="/" aria-label="Open Braun Bauen homepage"
            >Return to the home page</a
          >
        </p>
      </section>
    </main>
    <Footer />
  </body>
</html>
